<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/book_photo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/book_icon" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/book_photo"
        android:paddingLeft="10dp"
        android:text="Title"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:layout_below="@+id/book_title"
        android:layout_toRightOf="@+id/book_photo" />

    <TextView
        android:id="@+id/book_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_photo"
        android:layout_alignBottom="@id/book_borrower"
        android:gravity="bottom"
        android:text="Available"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        />
    <TextView

        android:id="@+id/book_borrower"
        android:text="Borrower Example"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_author"

        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/book_status"/>

    <TextView
        android:id="@+id/book_isbn"
        android:text="123456789123"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:id="@+id/map_marker"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/new_map_marker"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/book_isbn"
        android:layout_marginTop="8dp"/>


</RelativeLayout>